modules = ["web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RealCheck Mobile"

[[workflows.workflow]]
name = "RealCheck Mobile"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile && npx expo start --web --port 5000 --host lan"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "mobile/dist", "-l", "5000"]
build = ["bash", "-c", "cd mobile && npm install --legacy-peer-deps && npx expo export --platform web"]
